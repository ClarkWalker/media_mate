{
	"name": "media-mate",
	"productName": "MediaMate",
	"version": "0.0.1",
	"private": true,
	"license": "MIT",
	"description": "My SDD HSC Major Project, a full media server/player/downloader/etc - in one",
	"repository": "willyb321/media-mate",
	"author": {
		"name": "willyb321",
		"email": "wbwilliam7@gmail.com",
		"url": "tehsuperwilly.tech"
	},
	"scripts": {
		"test": "gulp test",
		"prestart": "gulp && gulp index",
		"start": "set NODE_ENV=development && electron app/indexbuild.js",
		"build": "electron-zip-packager . --out=dist --overwrite --platform=win32 --arch=x64 --prune --asar",
		"pack": "gulp index && gulp build:pack",
		"dist": "gulp index && gulp build:dist",
		"release": "gulp index && gulp build:dist",
		"tag": "release-it",
		"lint": "eslint .",
		"docs": "jsdoc -c ./conf.json -t ./node_modules/ink-docstrap/template -R readme.md",
		"postinstall": "(cd app && yarn install)",
		"deps": "(ncu -au && cd app && ncu -au)"
	},
	"keywords": [
		"electron-app",
		"electron"
	],
	"devDependencies": {
		"ava": "^0.18.2",
		"babel-core": "^6.24.0",
		"babel-preset-latest": "^6.24.0",
		"del": "^2.2.2",
		"devtron": "^1.4.0",
		"electron": "^1.6.2",
		"electron-builder": "^16.6.0",
		"eslint": "^3.18.0",
		"eslint-config-xo": "^0.18.1",
		"gulp": "^3.9.1",
		"gulp-ava": "^0.16.0",
		"gulp-babel": "^6.1.2",
		"gulp-concat": "^2.6.1",
		"gulp-if": "^2.0.2",
		"gulp-inject": "^4.2.0",
		"gulp-sourcemaps": "^2.5.0",
		"gulp-uglify": "^2.1.2",
		"gulp-xo": "^0.15.0",
		"ink-docstrap": "^1.3.0",
		"jsdoc": "^3.4.3",
		"jsdoc-export-default-interop": "^0.3.1",
		"release-it": "^2.6.0",
		"rimraf": "^2.6.1",
		"spectron": "^3.6.0"
	},
	"ava": {},
	"xo": {
		"esnext": true,
		"envs": [
			"node",
			"browser"
		],
		"reporter": "mocha-circleci-reporter",
		"ignores": [
			"tests/*",
			"test.js",
			"gulpfile.babel.js",
			"app/indexbuild.*",
			"docs/**/*"
		]
	},
	"build": {
		"appId": "com.willyb321.media_mate",
		"nsis": {
			"oneClick": false,
			"allowToChangeInstallationDirectory": true
		},
		"mac": {
			"category": "public.app-category.entertainment"
		},
		"win": {
			"target": [
				"nsis"
			],
			"publish": [
				"github"
			],
			"iconUrl": "https://github.com/willyb321/elite-journal/blob/master/build/icon.ico?raw=true",
			"remoteReleases": true
		}
	},
	"dependencies": {
		"jsdoc-strip-async-await": "^0.1.0"
	}
}
